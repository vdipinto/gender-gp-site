{
  "name": "gender-gp-frontend",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "build": "vite build",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "lint:js": "eslint ../wp-content/themes/**/*.js --max-warnings=0",
    "lint:css": "stylelint ../wp-content/themes/**/*.{css,scss} --max-warnings=0",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sass": "^1.80.4",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.5.0",
    "vite": "^5.4.10"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.php": "prettier --write"
  }
}
